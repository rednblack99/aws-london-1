<h1>Upload CSV File</h1>

<% if notice %>
  <div style="color: green; margin: 10px 0;"><%= notice %></div>
<% end %>

<% if alert %>
  <div style="color: red; margin: 10px 0;"><%= alert %></div>
<% end %>

<%= form_with url: uploads_path, multipart: true, local: true do |form| %>
  <div>
    <%= form.label :csv_file, "Select CSV File:" %>
    <%= form.file_field :csv_file, accept: ".csv" %>
  </div>
  
  <div style="margin-top: 10px;">
    <%= form.submit "Upload" %>
  </div>
<% end %>